{
    "name": "planrun/backend",
    "description": "PlanRun Backend API",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "phpmailer/phpmailer": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "files": [
            "config/env_loader.php",
            "db_config.php",
            "auth.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "process-timeout": 600
    }
}
